<Window x:Class="Fomore.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Fomore.UI"
        mc:Ignorable="d"
        Title="Fomore" MinHeight="600" MinWidth="960" Width="1440" Height="900" Icon="assets/images/icon.ico" DataContext="{Binding Path=AppState, Source={x:Static ui:App.Instance}}"
        Background="{StaticResource Level0Brush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem Header="Creature..." Command="{Binding CurrentViewModel.NewCreatureCommand}" />
                    <MenuItem Header="Bone Collection..." Command="{Binding CurrentViewModel.NewBoneCollectionCommand}" />
                </MenuItem>
                <MenuItem Header="Open..." Command="{Binding CurrentViewModel.OpenCommand}" />
                <MenuItem Header="Quit" Command="{Binding CurrentViewModel.QuitCommand}" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" Command="{Binding CurrentViewModel.UndoCommand}" />
                <MenuItem Header="Redo" Command="{Binding CurrentViewModel.RedoCommand}" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding CurrentViewModel.AboutCommand}" />
            </MenuItem>
        </Menu>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="{StaticResource ContentMargin}" />
    </Grid>
</Window>
