<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:Fomore.UI.ViewModel"
                    xmlns:controls="clr-namespace:Fomore.UI.Views.Controls"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">
    <DataTemplate DataType="{x:Type viewModel:WelcomeScreenViewModel}">
        <DataTemplate.Resources>
            <Style x:Key="WelcomePageHeadline" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="32" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Margin" Value="12,6" />
            </Style>
            <Style x:Key="NewOptionHeadline" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Margin" Value="8,4,8,0" />
            </Style>
            <Style x:Key="NewOptionSubHeadline" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="Light" />
                <Setter Property="Margin" Value="8,0,8,2" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="Foreground" Value="DimGray" />
            </Style>
        </DataTemplate.Resources>
        <Grid Background="{StaticResource TemplateBackground}">
            <Grid Margin="48">
                <Grid.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="Black" />
                        <Setter Property="BorderThickness" Value="2" />
                        <Setter Property="Margin" Value="8" />
                        <Setter Property="Background" Value="{StaticResource ContentBackground}" />
                    </Style>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Background" Value="{StaticResource HeaderBackground}" />
                    </Style>
                    <Style TargetType="{x:Type controls:PanelButton}">
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <!-- New -->
                <Border Grid.Row="0" Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="New" Style="{StaticResource WelcomePageHeadline}" />
                            <Separator />
                        </StackPanel>
                        <controls:PanelButton Grid.Row="1" Margin="8,8,8,4" Command="{Binding NewCreatureCommand}" MaxWidth="512">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <fa:ImageAwesome Icon="FileOutline" VerticalAlignment="Center" Margin="24" Height="48" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"  />
                                        <RowDefinition Height="*"  />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Style="{StaticResource NewOptionHeadline}" Text="Create a new creature" />
                                    <TextBlock Grid.Row="1" Style="{StaticResource NewOptionSubHeadline}" Text="Opens the creature creation wizard, which will guide you through the process of creating a new creature" />
                                </Grid>
                            </Grid>
                        </controls:PanelButton>
                        <controls:PanelButton Grid.Row="2" Margin="8,4,8,8" MaxWidth="512" Style="{StaticResource {x:Type controls:PanelButton}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <fa:ImageAwesome Icon="FileOutline" VerticalAlignment="Center" Margin="24" Height="48" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"  />
                                        <RowDefinition Height="*"  />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Style="{StaticResource NewOptionHeadline}" Text="Import Bones" />
                                    <TextBlock Grid.Row="1" Style="{StaticResource NewOptionSubHeadline}" Text="Opens the import bone wizard, which will guide you through the process of importing bones" />
                                </Grid>
                            </Grid>
                        </controls:PanelButton>
                    </Grid>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Style="{StaticResource WelcomePageHeadline}" Text="Creatures" />
                            <Separator />
                        </StackPanel>
                        <TextBlock Grid.Row="1" Text="No creatures created so far" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding BoneLibrary.Count, Converter={StaticResource NumberVisibilityConverter}}"></TextBlock>
                        <ItemsControl Grid.Row="1" />
                    </Grid>
                </Border>
                <Border Grid.Row="1" Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Style="{StaticResource WelcomePageHeadline}" Text="Bone Library" />
                            <Separator />
                        </StackPanel>
                        <TextBlock Grid.Row="1" Text="Bone Library is empty" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding BoneLibrary.Count, Converter={StaticResource NumberVisibilityConverter}}"></TextBlock>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding BoneLibrary}" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>