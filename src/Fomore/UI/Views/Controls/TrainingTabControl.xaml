<UserControl x:Class="Fomore.UI.Views.Controls.TrainingTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:navigation="clr-namespace:Fomore.UI.ViewModel.Navigation"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance navigation:TrainingTabVM}">
    <Border Padding="10" Background="White">
        <StackPanel >
            <TextBlock Text="Training Assistant" FontWeight="Bold" FontSize="20"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <!-- Define Scenario-->
                <StackPanel Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--Creature-->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Creature" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text=" select Creature" FontSize="14" Margin="0 10"/>
                            <ListBox ItemsSource="{Binding EntityStorageVM.Creatures}" SelectedItem="{Binding SelectCreature, Mode=TwoWay}"></ListBox>
                        </StackPanel>
                        <!--Movment Pattern-->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Movment Pattern" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text=" select Movment Pattern" FontSize="14" Margin="0 10"/>
                            <ListBox Margin="10 0" ItemsSource="{Binding SelectCreature.MovementPatternCollectionVM}" SelectedItem="{Binding SelecMovementPattern, Mode=TwoWay}"></ListBox>
                        </StackPanel>
                        <!--Environment-->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Environment" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text=" select Environment" FontSize="14" Margin="0 10"/>
                            <ListBox  Margin="10 0"  ItemsSource="{Binding EntityStorageVM.Environments}" SelectedItem="{Binding SelectEnvironment, Mode=TwoWay}"></ListBox>
                        </StackPanel>
                        <!--Setting-->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Settings" FontWeight="Bold" FontSize="18"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Target Speed" Margin="0 10 0 0" FontSize="14" />
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBox Margin="0 0 0 0" Background="White" Foreground="Black" Text="{Binding Path=SelectSpeed}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <!-- Buttons-->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Content="Show training progress" FontSize="14" Margin="0 20 0 0" Command="{Binding Path=SelectShow}"/>
                        <Button Margin="90 0 10 0" Grid.Column="1" Content="Reset" Height="50" Background="White" FontSize="14" FontWeight="Bold" Command="{Binding ResetCommand}"/>
                        <Button Margin="0 0 100 0" Grid.Column="2" Content="Start Training" Height="50" Background="White" FontSize="14" FontWeight="Bold" Command="{Binding StartTrainingCommand}"/>
                    </Grid>
                </StackPanel>
            </Grid>

        </StackPanel>

    </Border>


</UserControl>