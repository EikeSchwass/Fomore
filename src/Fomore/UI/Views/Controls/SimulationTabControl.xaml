<UserControl x:Class="Fomore.UI.Views.Controls.SimulationTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:navigation="clr-namespace:Fomore.UI.ViewModel.Navigation"
             xmlns:data="clr-namespace:Fomore.UI.ViewModel.Data"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance navigation:SimulationTabVM}">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 1: Chose Creature"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="0" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding EntityStorageVM.Creatures}"
                 SelectedItem="{Binding EntityStorageVM.SelectedCreature, Mode=TwoWay}" />

        <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 2: Chose Movement pattern"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="1" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding EntityStorageVM.SelectedCreature.MovementPatterns}"
                 SelectedItem="{Binding EntityStorageVM.SelectedMovementPattern, Mode=TwoWay}" />

        <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 3: Chose Environment"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="2" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding EntityStorageVM.Environments}"
                 SelectedItem="{Binding EntityStorageVM.SelectedEnvironment, Mode=TwoWay}" />

        <Button Grid.Column="0" Grid.Row="2" Margin="5"
                Command="{Binding CreateStuffCommand}" Content="Create some stuff ..." />
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Command="{Binding EntityStorageVM.ResetSelectionCommand}" Content="Reset Selection" />
        <Button Grid.Column="2" Grid.Row="2" Background="Green" Margin="5" Command="{Binding StartSimulationCommand}" Content="Start Simulation" />
        <!--
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Switch to Creature Tab" Command="{Binding Path=TabNavigationVM.SwitchToCreatureTabCommand}" />
            <Button Content="Switch to Enviroment Tab" Command="{Binding TabNavigationVM.SwitchToEnvironmentTabCommand}"/>
            <Button Content="Switch to Training Tab" Command="{Binding TabNavigationVM.SwitchToTrainingTabCommand}"/>
            <Button Content="Switch to Simulation Tab" Command="{Binding TabNavigationVM.SwitchToSimulationTabCommand}"/>
        </StackPanel>
        -->
    </Grid>
</UserControl>