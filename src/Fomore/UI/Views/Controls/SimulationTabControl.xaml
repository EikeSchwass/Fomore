<UserControl x:Class="Fomore.UI.Views.Controls.SimulationTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:navigation="clr-namespace:Fomore.UI.ViewModel.Navigation"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance navigation:SimulationTabVM}">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 1: Chose Creature"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="0" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding EntitiesStorage.Creatures}"
                 SelectedItem="{Binding SelectedCreature, Mode=TwoWay}" />

        <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 2: Chose Movement pattern"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="1" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding SelectedCreature.MovementPatternCollectionVM}"
                 SelectedItem="{Binding SelectedMovementPattern, Mode=TwoWay}" />

        <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Step 3: Chose Environment"
               VerticalAlignment="Center" />
        <ListBox Grid.Column="2" Grid.Row="1" Margin="5"
                 ItemsSource="{Binding EntitiesStorage.Environments}"
                 SelectedItem="{Binding SelectedEnvironment, Mode=TwoWay}" />

        <Button Grid.Column="0" Grid.Row="2" Margin="5"
                Command="{Binding CreateStuffCommand}" Content="Create some stuff ..." />
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Command="{Binding ResetSelectionCommand}" Content="Reset Selection" />
        <Button Grid.Column="2" Grid.Row="2" Background="Green" Margin="5" Command="{Binding StartSimulationCommand}" Content="Start Simulation" />

    </Grid>
</UserControl>