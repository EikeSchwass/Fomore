<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Fomore.UI.Themes"
                    xmlns:data="clr-namespace:Fomore.UI.ViewModel.Data">
    <SolidColorBrush x:Key="SelectedItemColor" Color="Red" />
    <SolidColorBrush x:Key="NormalItemColor" Color="Green" />
    
    <Style TargetType="ListBoxItem">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource SelectedItemColor}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="MinWidth" Value="350" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
    <Style x:Key="ListBoxItemTextBlocks" TargetType="TextBlock">
        <Setter Property="Padding" Value="10" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <!--<Setter Property="MaxWidth" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}" />-->
    </Style>

    <DataTemplate DataType="{x:Type data:CreatureVM}">
        <Border BorderThickness="3" CornerRadius="3" BorderBrush="Red" Margin="3">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.RowSpan="2" Margin="10" Width="64" Height="64"
                           Source="../../assets/images/creature_icon.png" />
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ListBoxItemTextBlocks}" FontSize="20" FontWeight="ExtraBold"
                               Text="{Binding Name}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListBoxItemTextBlocks}" Text="{Binding Description}" />
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type data:MovementPatternVM}">
        <Border BorderThickness="3" CornerRadius="3" BorderBrush="Blue" Margin="3">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.RowSpan="2" Margin="10" Width="64" Height="64"
                       Source="../../assets/images/movementpattern_icon.png" />
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ListBoxItemTextBlocks}" FontSize="20" FontWeight="ExtraBold"
                           Text="{Binding Name}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListBoxItemTextBlocks}" Text="{Binding Description}" />
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type data:EnvironmentVM}">
        <Border BorderThickness="3" CornerRadius="3" BorderBrush="Green" Margin="3">
            <Grid Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.RowSpan="2" Margin="10" Width="64" Height="64"
                       Source="../../assets/images/environment_icon.png" />
                <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource ListBoxItemTextBlocks}" FontSize="20" FontWeight="ExtraBold"
                           Text="{Binding Name}" />
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource ListBoxItemTextBlocks}" Text="{Binding Description}" />
                <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource ListBoxItemTextBlocks}" TextAlignment="Right" FontStyle="Italic"
                           Text="{Binding Gravity, StringFormat={}{0} m/s²}" />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>